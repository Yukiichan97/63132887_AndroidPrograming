<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutFragment">
    <TextView
        android:id="@+id/text_mssv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSSV: 63132887"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên: Phạm Nguyễn Hoài Minh"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/text_bla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chủ đề: Ứng dụng dịch mã Morse"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/github_button"
        android:layout_width="137dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/github_logo_description"
        android:scaleType="fitCenter"
        android:src="@drawable/github_logo"
        />


</LinearLayout>


